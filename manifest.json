{
  "manifest_version": 3,
  "name": "ChatGPT Chat Hider",
  "version": "0.1.0",
  "description": "Hide individual or all ChatGPT questions and answers, including action bars.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
